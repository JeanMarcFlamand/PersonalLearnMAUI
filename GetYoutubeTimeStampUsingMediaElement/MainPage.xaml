<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mediaTK="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="GetYoutubeTimeStampUsingMediaElement.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <mediaTK:MediaElement 
                WidthRequest="500"
                HeightRequest="500"
                Source="https://youtu.be/_sp4RG0I0x4"
                >
                
            </mediaTK:MediaElement>

            <Button
                x:Name="CounterBtn"
                Text="Click me"
                SemanticProperties.Hint="Counts the number of times you click"
                Clicked="OnCounterClicked"
                HorizontalOptions="Center" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
