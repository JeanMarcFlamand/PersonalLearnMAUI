<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GetYoutubeTimeStamp.MainPage">
    <VerticalStackLayout>
        <StackLayout>
            <WebView x:Name="webView" 
                     Source="https://www.youtube.com/watch?v=GZGFlyaqWbA"
                    
                    MinimumWidthRequest="500" 
                    MinimumHeightRequest="500"
                    HorizontalOptions="StartAndExpand"
                    VerticalOptions="StartAndExpand"/>
        </StackLayout>

        <StackLayout Orientation="Horizontal">
                <Button Text="Get Value" Clicked="OnGetValueClicked" />
                
            </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Result from using HtmlAgilityPack : "
                   BackgroundColor="Yellow"></Label>
            <Label x:Name="valueLabel" />
        </StackLayout>
        <StackLayout Orientation="Horizontal">
            <Label Text="Result from using GetStringBetween method : "
                   BackgroundColor="Yellow"></Label>
            <Label x:Name="valueLabel2" />
        </StackLayout>

    </VerticalStackLayout>


</ContentPage>
